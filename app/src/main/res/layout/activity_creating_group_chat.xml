<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreatingGroupChatActivity"
    android:padding="10dp" >

    <EditText
        android:id="@+id/groupChatName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название чата" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectContacts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/groupChatName"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/createGroupChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="Создать чат"
        android:src="@drawable/chat_next"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>